<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.DefinitionsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background" >

        <View
            android:id="@+id/viewUserDefinitions"
            android:layout_width="0dp"
            android:layout_height="220dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/buttons"
            android:padding="20dp"
            android:paddingStart="20dp"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:paddingEnd="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageViewDefinitions"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:adjustViewBounds="false"
            android:background="@drawable/image"
            android:cropToPadding="false"
            android:padding="25dp"
            android:src="@drawable/bxs_user__1_"
            app:layout_constraintStart_toStartOf="@+id/viewUserDefinitions"
            app:layout_constraintTop_toTopOf="@+id/viewUserDefinitions" />

        <ImageView
            android:id="@+id/imageViewPictureDefinitions"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/bxs_user__1_"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewDefinitions"
            app:layout_constraintEnd_toEndOf="@+id/imageViewDefinitions"
            app:layout_constraintStart_toStartOf="@+id/imageViewDefinitions"
            app:layout_constraintTop_toTopOf="@+id/imageViewDefinitions" />

        <TextView
            android:id="@+id/lblUsernameDefinitions"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/textbox"
            android:gravity="center"
            android:includeFontPadding="false"
            android:paddingLeft="5dp"
            android:text="@string/username"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="@+id/viewUserDefinitions"
            app:layout_constraintEnd_toEndOf="@+id/btnLogoutDefinitions"
            app:layout_constraintStart_toStartOf="@+id/imageViewDefinitions" />

        <View
            android:id="@+id/viewBtnScoresDefinitions"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/backbtnprofile"
            android:backgroundTint="#dc2727"
            android:padding="20dp"
            app:layout_constraintEnd_toEndOf="@+id/viewUserDefinitions"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/viewUserDefinitions"
            app:layout_constraintTop_toBottomOf="@+id/viewUserDefinitions" />

        <View
            android:id="@+id/viewBtnAchievementsDefinitions"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/backbtnprofile"
            android:backgroundTint="#6d28d9"
            android:padding="20dp"
            app:layout_constraintEnd_toEndOf="@+id/viewUserDefinitions"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/viewUserDefinitions"
            app:layout_constraintTop_toBottomOf="@+id/viewBtnScoresDefinitions" />

        <View
            android:id="@+id/viewBtnStatisticsDefinitions"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/backbtnprofile"
            android:backgroundTint="#dc2727"
            android:padding="20dp"
            app:layout_constraintEnd_toEndOf="@+id/viewUserDefinitions"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/viewUserDefinitions"
            app:layout_constraintTop_toBottomOf="@+id/viewBtnAchievementsDefinitions" />

        <View
            android:id="@+id/viewBtnDeleteAllDefinitions"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/backbtnprofile"
            android:backgroundTint="#6d28d9"
            android:padding="20dp"
            app:layout_constraintEnd_toEndOf="@+id/viewUserDefinitions"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/viewUserDefinitions"
            app:layout_constraintTop_toBottomOf="@+id/viewBtnStatisticsDefinitions" />

        <Button
            android:id="@+id/btnDeleteScoresDefinitions"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#f9ccd2"
            android:clickable="false"
            android:drawableLeft="@drawable/bxs_folder_minus"
            android:drawableRight="@drawable/bxs_folder_minus"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:text="Delete Scores"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="normal"
            app:cornerRadius="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/viewBtnScoresDefinitions"
            app:layout_constraintEnd_toEndOf="@+id/viewBtnScoresDefinitions"
            app:layout_constraintStart_toStartOf="@+id/viewBtnScoresDefinitions"
            app:layout_constraintTop_toTopOf="@+id/viewBtnScoresDefinitions"
            app:layout_constraintVertical_bias="1.0"
            app:strokeColor="@color/black"
            app:strokeWidth="3dp" />

        <Button
            android:id="@+id/btnDeleteAchievementsDefinitions"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#f3e8ff"
            android:clickable="false"
            android:drawableLeft="@drawable/bxs_folder_minus"
            android:drawableRight="@drawable/bxs_folder_minus"
            android:paddingLeft="32dp"
            android:paddingRight="34dp"
            android:text="Delete Achievements"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:cornerRadius="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/viewBtnAchievementsDefinitions"
            app:layout_constraintEnd_toEndOf="@+id/viewBtnScoresDefinitions"
            app:layout_constraintStart_toStartOf="@+id/viewBtnScoresDefinitions"
            app:layout_constraintTop_toTopOf="@+id/viewBtnAchievementsDefinitions"
            app:layout_constraintVertical_bias="1.0"
            app:strokeColor="@color/black"
            app:strokeWidth="3dp" />

        <Button
            android:id="@+id/btnDeleteStatisticsDefinitions"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#f9ccd2"
            android:clickable="false"
            android:drawableLeft="@drawable/bxs_folder_minus"
            android:drawableRight="@drawable/bxs_folder_minus"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:text="Delete Statistics"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="normal"
            app:cornerRadius="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/viewBtnStatisticsDefinitions"
            app:layout_constraintEnd_toEndOf="@+id/viewBtnStatisticsDefinitions"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/viewBtnStatisticsDefinitions"
            app:layout_constraintTop_toTopOf="@+id/viewBtnStatisticsDefinitions"
            app:strokeColor="@color/black"
            app:strokeWidth="3dp" />

        <Button
            android:id="@+id/btnDeleteAllDefinitions"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#f3e8ff"
            android:clickable="false"
            android:drawableLeft="@drawable/bxs_folder_minus"
            android:drawableRight="@drawable/bxs_folder_minus"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:text="Delete All Data"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="normal"
            app:cornerRadius="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/viewBtnDeleteAllDefinitions"
            app:layout_constraintEnd_toEndOf="@+id/viewBtnScoresDefinitions"
            app:layout_constraintStart_toStartOf="@+id/viewBtnScoresDefinitions"
            app:layout_constraintTop_toTopOf="@+id/viewBtnDeleteAllDefinitions"
            app:layout_constraintVertical_bias="1.0"
            app:strokeColor="@color/black"
            app:strokeWidth="3dp" />

        <ImageButton
            android:id="@+id/btnLogoutDefinitions"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/backbtnprofile"
            android:backgroundTint="#c1daf3"
            android:padding="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/_030313_sign_out_ui_basic_logout_app_user_interface_icon"
            android:tint="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/viewUserDefinitions"
            app:layout_constraintTop_toTopOf="@+id/viewUserDefinitions"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck,UseAppTint" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>